{
    "id": "ambari218",
    "hostname": "192.168.1.218",
    "resource": {
       "vcpu": 4,
       "memory": 6096
    },
    "containers" : [{
        "image": "2breakfast/ambari:server",
        "entryPoint": ["/opt/ambari-server/non-init-entrypoint.sh"],
        "command": ["/bin/bash"],
        "volumes": [{
            "volume": "data_vol",
            "path": "/lib/modules",
            "readOnly": false
        }]
    }],
    "volumes": [{
        "name": "data_vol",
        "source": "/ambari/ambari218",
        "driver": "vfs"
    }],
    "interfaces": [{
        "bridge": "hyper0",
        "ip": "192.168.1.218/24",
        "gateway": "192.168.1.20"
    }]
}
